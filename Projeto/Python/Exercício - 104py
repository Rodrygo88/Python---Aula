print("====== DESAFIO 104 ======") 

def leiaInt(texto="Digite um número: "):
      digito = input(texto)
      teste = digito.isnumeric()

      if teste == True:
            return digito
      else:
            while teste == False:
                  print("ERRO! ")
                  digito = input(texto)
                  teste = digito.isnumeric()
            return digito


n = leiaInt("Digite algo: ")
print(f"O número digitado foi o {n}")